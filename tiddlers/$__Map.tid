tags: $:/tags/SideBar
title: $:/Map
type: text/vnd.tiddlywiki

\define coords() $(first)$,$(second)$
\define mapactions() <$action-setfield $tiddler="$:/Map" $field="refresh"/>
\define markeractions() <$set name="first" filter="[{$:/MapBounds}split[,]nth[6]]"> <$set name="second" filter="[{$:/MapBounds}split[,]nth[5]]"> <$action-setfield $tiddler="$:/Origin" text=<<coords>>/> </$set> </$set> <$set name="first" filter="[{$:/MapBounds}split[,]nth[8]]"> <$set name="second" filter="[{$:/MapBounds}split[,]nth[7]]"> <$action-setfield $tiddler="$:/Destination" text=<<coords>>/> </$set> </$set><$action-setfield $tiddler="$:/Map" $field="refresh"/>
\define posactions() <$set name="first" filter="[{$:/MapBounds}split[,]nth[10]]"> <$set name="second" filter="[{$:/MapBounds}split[,]nth[9]]"> <$action-setfield $tiddler="$:/PartyPosition" text=<<coords>>/> </$set> </$set><$action-setfield $tiddler="$:/Map" $field="refresh"/>
\define backgeocheck() <$action-sendmessage $message="tm-add-tag" $param="[all[]list[geography]tagging[]!tag[continent]!has[points]var[back]!has[draft.of]]"/>
\define backgeouncheck() <$action-sendmessage $message="tm-remove-tag" $param="[all[]list[geography]tagging[]!tag[continent]!has[points]var[back]!has[draft.of]]"/>
\define nationsAboveActions() <$action-sendmessage $message="tm-remove-tag" $param="[all[]has[title]list[territory]tagging[]has[polygons]!has[draft.of]]"/><$action-setfield $tiddler="$:/Map" additionalstyle="nationstyle"/>
\define nationsBelowUncheck() <$action-setfield $tiddler="$:/Map" additionalstyle=""/>
\define nationsBelowActions() <$action-sendmessage $message="tm-remove-tag" $param="[all[]all[]all[]all[]has[title]list[territory]tagging[]has[polygons]!has[draft.of]]"/><$action-setfield $tiddler="$:/Map" additionalstyle=""/>

<div id="map-scroll-position" style="scroll-margin: 70px;"></div>

<$reveal type="nomatch" state="$:/MapShowControls" text="show">
<$button class="tc-btn-invisible tc-tiddlylink" set="$:/MapShowControls" setTo="show">Show Map Options</$button>
</$reveal>

<$reveal type="match" state="$:/MapShowControls" text="show">
<$button class="tc-btn-invisible tc-tiddlylink" set="$:/MapShowControls" setTo="hide">Hide Map Options</$button><br/>

<$fieldmangler tiddler="$:/MapTags">
<div class="cs-wrapper" style="max-width:600px;">
  <div class="cs-row">
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[all[]all[]all[]has[polylines]tag[latitude]!has[draft.of]]"> ''Lines of Latitude''</$checkbox>
    </div>
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[has[polygons]tag[continent]!has[draft.of]]"> ''Continents''</$checkbox>
    </div>
  </div>
  <div class="cs-row">
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[has[polygons]tag[sea]!has[draft.of]]"> ''Seas''</$checkbox>
    </div>
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[all[]all[]all[]list[geography]tagging[]!tag[continent]!has[points]!var[back]!has[draft.of]]" checkactions=<<backgeocheck>> uncheckactions=<<backgeouncheck>>> ''Geography''</$checkbox>
    </div>
  </div>
  <div class="cs-row">
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[all[]has[title]list[territory]tagging[]has[polygons]!has[draft.of]]" checkactions=<<nationsBelowActions>>> ''Nations and Regions (below)''</$checkbox>
    </div>
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[all[]all[]all[]all[]has[title]list[territory]tagging[]has[polygons]!has[draft.of]]" checkactions=<<nationsAboveActions>> uncheckactions=<<nationsBelowUncheck>>> ''Nations and Regions (above)''</$checkbox>
    </div>
  </div>
  <div class="cs-row">
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[has[points]!has[draft.of]]"> ''City/Site Markers''</$checkbox>
    </div>
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[all[]all[]all[]all[]list[$:/mapcitydivision]tagging[]has[polygons]!has[draft.of]]"> ''City Divisions''</$checkbox>
    </div>
  </div>
  <div class="cs-row">
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[all[]all[]all[]all[]var[orientraderoad]!has[draft.of]]"> ''Roads''</$checkbox>
    </div>
    <div class="cs-column">
<$checkbox tiddler="$:/MapTags" tag="[all[]all[]all[]all[]var[lightningrail]!has[draft.of]]"> ''Lightning Rail Lines''</$checkbox>
    </div>
  </div>
  <div class="cs-row">
    <div class="cs-doublecolumn">
<$checkbox tiddler="$:/MapTags" tag="[all[]all[]has[polygons]tag[province]!has[draft.of]]"> ''Provinces''</$checkbox>
    </div>
  </div>
</div>
</$fieldmangler>
</$reveal>

<$set name=filters filter="[[$:/MapTags]tags[]sort[]reverse[]]">
<div style="padding:7px;border-style: double;max-width:600px;">
<$fantasymap width="100%" filter=<<filters>> clipPadding="2.0" additionalStyle={{$:/Map!!additionalstyle}}/>
</div>
</$set>

<$button>
<<mapactions>>
Refresh Map
</$button>
<$button>
<<markeractions>>
Reset Markers
</$button>
<$button><$action-setfield $tiddler="$:/FlyLocation" text={{$:/PartyPosition}}/><$action-setfield $tiddler="$:/Map" $field="refresh"/>Go To Party Position</$button>
<$button>
<<posactions>>
Reset Party Position
</$button>

