.grid-container {
  display: grid;
  counter-reset: grid-items;
  position: relative;
  grid-template-columns: repeat(auto-fit, minmax(calc(100px + 2vw), 1fr));
}

.grid-item {
  counter-increment: grid-item;
  margin: 1em;
}

.did-you-mean a {
  display: inline !important;
  padding: 0px !important;
}

blockquote {
  background:<<color select-tag-background>>;
